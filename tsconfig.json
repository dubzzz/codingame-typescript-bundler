{
    "compilerOptions": {
        "declaration": false,
        "sourceMap": false,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "target": "es3",
        "module": "amd",
        "lib": [
            "es6"
        ],
        "outFile": "lib/bundle.js"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
